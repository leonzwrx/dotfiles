# Styles / theme
include $HOME/.config/sway/themes/nord-sway


# Global variables
include /etc/sway/variables

# User variables
include $HOME/.config/sway/variables.d/*.conf

include /etc/sway/outputs/*.conf
include /etc/sway/inputs/*.conf

# include modes
include /etc/sway/modes/*.conf

# Additional configs
include /etc/sway/config.d/*.conf

# User config
include $HOME/.config/sway/config.d/*.conf
include $HOME/.config/sway/inputs/*
include $HOME/.config/sway/modes/*

# Include nwg-displays configs (if exists)
include ~/.config/sway/outputs
include ~/.config/sway/workspaces

# Azote for backgrounds
exec ~/.azotebg

#Trying this so that any child service (like swayidle.service) inherits the same WAYLAND_DISPLAY that sway exported.
exec systemctl --user import-environment \
    DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP XDG_SESSION_TYPE XDG_RUNTIME_DIR

# Status Bar:

bar {
   swaybar_command waybar
}
